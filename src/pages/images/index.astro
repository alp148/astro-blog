---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05 from "@images/post-05.png";
---

<MainLayout title="Imágenes">
    <h1 class="text-5xl text-white">Imágenes</h1>

    <img
        loading="eager"
        src="/assets/images/post-05.png"
        width="250"
        height="250"
    />

    <Image
        src={post05}
        width="500"
        height="500"
        style={{ width: "250px", height: "250px" }}
        alt="Imagen del Post"
    />

    <h1>Low quality</h1>
    <Image
        src={post05}
        quality="low"
        width="250"
        height="250"
        alt="Imagen del Post"
    />

    <h1>Formatos</h1>
    <Image
        src={post05}
        format="jpg"
        width="250"
        height="250"
        alt="Imagen del Post"
    />
    <Image
        src={post05}
        format="avif"
        width="250"
        height="250"
        alt="Imagen del Post"
    />

    <h1>Picture</h1>
    <Picture
        src={post05}
        formats={["webp", "avif", "jpeg", "png"]}
        width="250"
        height="250"
        alt="Imagen del Post"
    />

    <h1>Sizes</h1>
    <Picture
        src={post05}
        widths={[240, 540, 720, post05.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05.width}px`}
        width="250"
        height="250"
        alt="Imagen del Post"
    />

    <h1>Densities</h1>
    <Picture
        src={post05}
        alt="Imagen del Post"
        width={post05.width / 2}
        densities={[1.5, 2]}
    />

    <div style={{ height: "3000px" }}></div>

    <img
        loading="lazy"
        src="/assets/images/post-01.png"
        width="250"
        height="250"
    />
</MainLayout>

<style>
    h1 {
        @apply text-white mt-10;
    }
</style>
